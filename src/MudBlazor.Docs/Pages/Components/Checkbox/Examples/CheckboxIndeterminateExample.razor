@namespace MudBlazor.Docs.Examples

<MudCheckBox @bind-Checked="value" Color="@Color.Primary">
    Value: @(value == null ? "null" : value.ToString())
</MudCheckBox>
<MudButton OnClick="@(()=>value=null)">Reset</MudButton>
<MudCheckBox @bind-Checked="anotherValue" Color="@Color.Secondary" TriState="true" ReverseTriState=_reversedCycle>Checkbox with TriState. Value: @(anotherValue == null ? "null" : anotherValue.ToString())</MudCheckBox>

<MudSwitch Label="Reversed values cycle" @bind-Checked=_reversedCycle />

@code {
    private bool _reversedCycle;

    public bool? value { get; set; } = null;
    public bool? anotherValue { get; set;} = null;
}